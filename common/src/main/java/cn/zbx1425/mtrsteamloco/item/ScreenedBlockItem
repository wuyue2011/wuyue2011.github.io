package cn.zbx1425.mtrsteamloco.item;

import mtr.CreativeModeTabs;
import net.minecraft.world.InteractionResultHolder;
import net.minecraft.world.level.block.Block;
import net.minecraft.world.item.BlockItem;
import net.minecraft.world.item.ItemStack;
import net.minecraft.world.entity.player.Player;
import net.minecraft.world.level.Level;
import net.minecraft.world.InteractionHand;

import java.util.function.Function;

public class ScreenedBlockItem extends BlockItem {
    private final OnUseFunction onUse;
	public final CreativeModeTabs.Wrapper creativeModeTab;

    public ScreenedBlockItem(CreativeModeTabs.Wrapper creativeModeTab, Block block, OnUseFunction onUse)  {
		super(block, RegistryUtilities.createItemProperties(creativeModeTab::get));
        this.onUse = onUse;
        this.creativeModeTab = creativeModeTab;
    }

    @Override
    public InteractionResultHolder<ItemStack> use(Level level, Player player, InteractionHand hand) {
        boolean result = onUse.apply(level, player, hand, getBlock());

    }

    public static interface OnUseFunction {
        boolean apply(Level level, Player player, InteractionHand hand, Block block);
    }

}